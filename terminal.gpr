project Terminal is

   for Source_Dirs use (".", "/usr/share/ada/adainclude");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   for Library_Name use "terminal_interface";
   for Library_Dir use "lib/";
   for Library_Ali_Dir use "lib/";
   for Library_Version use "6.0.0";

   package Linker is
       for Linker_Options use ("-Llib",
           "-lterminal_interface",
           "-L/usr/lib/ada/adalib",
           "-lAdaCurses");
   end Linker;

end Terminal;
